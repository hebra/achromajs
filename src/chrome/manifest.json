{
    "name": "Achromeatic",
    "version": "%PROJECT_VERSION%",
    "description": "Achromeatic is an AchromaJS-based tool to simulate different conditions of eye vision.",
    "author": "%AUTHOR_NAME%",
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "permissions": [
        "tabs",
        "activeTab",
        "declarativeContent",
        "storage",
        "http://*/",
        "https://*/"
    ],
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "assets/icon_16.png",
            "32": "assets/icon_32.png",
            "48": "assets/icon_48.png",
            "128": "assets/icon_128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "all_frames": true,
            "css": [
                "filters.css"
            ]
        }
    ],
    "icons": {
        "16": "assets/icon_16.png",
        "32": "assets/icon_32.png",
        "48": "assets/icon_48.png",
        "128": "assets/icon_128.png"
    },
    "manifest_version": 2
}